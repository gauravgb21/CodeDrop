<div class="user">
{{#if errors}}
     {{#each errors}}
     <div class="w3-container w3-section w3-red">
<span onclick="this.parentElement.style.display='none'" class="w3-closebtn">&times;</span>
  {{msg}}
</div>
     {{/each}}
{{/if}}
    <header class="user__header">
        <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/3219/logo.svg" alt="" />
        <h3 class="user__title">Code Drop</h3>
    </header>
    
    <form class="form" method="post" action="/users_register">
        <div class="form__group">
            <input type="text" placeholder="Name" class="form__input" name="name" />
        </div>
        
       <div class="form__group">
            <input type="text" placeholder="username" class="form__input" name="username" />
        </div>
       
        <div class="form__group">
            <input type="password" placeholder="password" class="form__input" name="password1" />
        </div>

        <div class="form__group">
            <input type="password" placeholder="confirm password" class="form__input" name="password2" />
        </div>
        <input type="submit" name="register" value="register" class="btn w3-theme-d5">
    </form>
</div>
  <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>

  

